{% extends 'base.html.twig' %}

{% block body %}

    <section class="article">
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createAt | date('d/m/y') }} 
                    dans la cat√©gorie {{ article.category.title }}</div>
                <div class="content">
                    <img src="{{ article.image }}">
                        {{ article.content | raw }}
                </div>
            </article>
    </section>
    <section class="comments">
        <h2>Les commentaires</h2>

        <h4> Ajouter un commentaire</h4>
        
            {{ form_start(formComment) }}
            
                {{ form_row(formComment.autor, {'attr':{'placeholder':'Votre nom'}}) }}
            
            
                {{ form_row(formComment.content, {'attr':{'placeholder':'Votre commentaire'}}) }}
            
                <button type="submit" class="btn btn-primary">Ajouter</button>
            {{ form_end(formComment) }}
        

        {% for comment in article.comments %}
        <div class="row">
            <div class="col-3">
                <p>Par {{ comment.autor }} le {{ comment.createAt | date('d/m/y') }}</p>
            </div>
            <div class="col-9">
                {{ comment.content | raw }}
            </div>
        </div>
        {% endfor %}
    </section>

{% endblock %}