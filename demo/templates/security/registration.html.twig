{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site </h1>

    {{ form_start(form) }}

    {{ form_row(form.email, {'attr':{'placeholder':'essai@gmail.com'}, 'label':'Adresse email'}) }}
    {{ form_row(form.username, {'attr':{'placeholder':'Michel Essai'}, 'label':'Votre login'}) }}
    {{ form_row(form.password, {'label':'Mot de passe'}) }}
    {{ form_row(form.confirm_password, {'label':'Confirmer votre mot de passe'}) }}

    <button type="submit" class="btn btn-primary">S'inscrire</button>

    {{ form_end(form) }}
{% endblock %}